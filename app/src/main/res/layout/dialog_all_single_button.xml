<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="260dp"
            android:layout_height="200dp"
            android:background="@drawable/all_background_dialog">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tv_dialog_single_title"
                    style="@style/Widget.TextView.Dialog.Title"
                    android:layout_marginTop="28dp"
                    android:text="@string/dialog_register_success_title"
                    app:layout_constraintBottom_toTopOf="@id/tv_dialog_single_description"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_dialog_single_description"
                    style="@style/Widget.TextView.Dialog.Description"
                    android:text="@string/dialog_register_success_description"
                    app:layout_constraintBottom_toTopOf="@id/btn_dialog_accept"
                    app:layout_constraintEnd_toEndOf="@id/tv_dialog_single_title"
                    app:layout_constraintStart_toStartOf="@id/tv_dialog_single_title"
                    app:layout_constraintTop_toBottomOf="@id/tv_dialog_single_title"
                    app:layout_constraintVertical_chainStyle="packed" />

                <Button
                    android:id="@+id/btn_dialog_accept"
                    style="@style/Widget.Button.Primary"
                    android:layout_height="40dp"
                    android:layout_marginHorizontal="19dp"
                    android:layout_marginBottom="16dp"
                    android:text="@string/accept"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_dialog_single_description"
                    app:layout_constraintVertical_chainStyle="packed" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</layout>